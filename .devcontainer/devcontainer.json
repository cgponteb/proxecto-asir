{
    "name": "Proxecto ASIR Dev Container",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "features": {
        "ghcr.io/devcontainers/features/terraform:1": {},
        "ghcr.io/devcontainers/features/aws-cli:1": {},
        "ghcr.io/devcontainers/features/git:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "hashicorp.terraform",
                "redhat.ansible"
            ]
        }
    },
    "postCreateCommand": "ansible-galaxy collection install amazon.aws community.mysql"
}
